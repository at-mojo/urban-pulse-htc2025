datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

enum Urgency {
  LOW
  MEDIUM
  HIGH
}

model Report {
  id        String   @id @default(cuid())
  userId    String   @db.Uuid()
  title     String   @db.VarChar(128)
  desc      String   @default("") @db.Text
  createdAt DateTime @default(now())    
  lat       Float
  lon       Float  
  path      String?  @db.VarChar(256)
  urgency   Urgency
  rating    Int      @default(0)
  votes     Vote[]
  relations ReportRelation[]
}

model ReportRelation {
  relation   Relation  @relation(fields: [relationId], references: [id], onDelete: Cascade)
  relationId String    
  report     Report    @relation(fields: [reportId], references: [id], onDelete: Cascade)
  reportId   String  
  @@id([relationId, reportId])
}

model Relation {
  id       String            @id @default(cuid())
  title    String            @db.VarChar(128)
  desc     String            @default("") @db.Text
  urgency  Urgency           // Average urgency
  reports  ReportRelation[]  
}

model Vote {
  report    Report   @relation(fields: [reportId], references: [id], onDelete: Cascade)
  userId    String   @db.Uuid()
  reportId  String   
  voteValue Int      @default(0) // 1 for upvote, -1 for downvote, 0 for neutral
  @@id([userId, reportId])
}
